<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <!-- remote database with derby network server for development purpose only -->
    <persistence-unit name="playlists">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.mustream.app.entities.PlaylistEntity</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSixDialect"/>
            <property name="hibernate.connection.url" value="jdbc:derby://localhost:1527/sun-appserv-samples;create=true"/>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>

    <!-- embedded database with hsql for development purpose only -->
    <persistence-unit name="playlists_local">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.mustream.app.entities.PlaylistEntity</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbc.JDBCDriver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.connection.url" value="jdbc:hsqldb:file:./testdb/db"/>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
